<Page x:Class="AYam.Common.Window.Pages.View.Path.SelectDirectory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      xmlns:vm="clr-namespace:AYam.Common.Window.Pages.ViewModel.Path"
      xmlns:ex="clr-namespace:AYam.Common.Controls.Custom;assembly=Common.Controls"
      d:DesignHeight="{Binding PageHeight, Mode=OneTime}" d:DesignWidth="{Binding PageWidth, Mode=OneTime}"
      >
    <Page.DataContext>
        <vm:SelectDirectory />
    </Page.DataContext>
    <Grid>
        <ex:TreeView ItemsSource="{Binding Paths}" BindableSelectedItem="{Binding SelectedDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="vm:PathTree" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding DirectoryName}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ToolTip>
                <ToolTip>
                    <TextBlock Text="{Binding SelectedPath}" />
                </ToolTip>
            </TreeView.ToolTip>
        </ex:TreeView>
    </Grid>
</Page>
